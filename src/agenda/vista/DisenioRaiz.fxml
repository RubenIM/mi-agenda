<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane id="BorderPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="agenda.controlador.DisenioRaizController">
  <stylesheets>
    <URL value="@DarkTheme.css" />
  </stylesheets>
  <top>
    <MenuBar BorderPane.alignment="CENTER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Nuevo" />
            <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Abrir..." />
            <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Guardar" />
            <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Guardar como..." />
            <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Salir" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Delete" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
